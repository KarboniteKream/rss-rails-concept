<header>
	<h1><a href="/home.aspx">kream.io</a><span class="version"> rss</span></h1>
	<nav>
		<ul>
			<li><a href="/Home.aspx" class="active">Home</a></li>
			<li><a href="/Settings.aspx">Settings</a></li>
			<li><a href="/Help.aspx">Help</a></li>
			<li><a>Sign out</a></li>
		</ul>
	</nav>
</header>
<div id="main">
	<div id="sidebar">
		<span id="new-subscription" class="button-primary block">New subscription</span>
		<div id="add-subscription">
			<form>
				<fieldset>
					<button type="submit" tabindex="2">Add</button>
					<input id="subscriptionURL" placeholder="subscription URL" tabindex="1" />
				</fieldset>
			</form>
		</div>
		<div id="sidebar-content">
			<div id="menu">
				<ul>
					<li><a id="home" href="#">Home</a></li>
					<li><a id="unread" href="#">Unread</a><span class="badge"> <%= @unread %></span></li>
					<li><a id="liked" href="#">Liked</a></li>
					<li><a id="all" href="#">All articles</a></li>
				</ul>
			</div>
			<div id="subscriptions">
				<ul class="connected sortable">
				<% @subscriptions.each do |subscription| %>
					<li><a id="<%= subscription.feed_id %>" style="background-image: url(data:image/png;base64,<%= Base64.strict_encode64(subscription.icon) %>);"><%= subscription.name %></a></li>
				<% end %>
				</ul>
				<ul>
				<% @folders.each do |folder| %>
					<li class="folder">
						<input id="<%= folder.folder %>" type="checkbox" />
						<label for="<%= folder.folder %>"><%= folder.folder %></label>
						<ul class="connected sortable">
							<li class="empty-li" />
						</ul>
					</li>
				<% end %>
				</ul>
			</div>
		</div>
	</div>
	<div id="content">
		<div id="header" class="header">
			<span class="button-primary">Refresh</span>
			<span class="button-secondary">Settings</span>
			<span class="button-secondary open-popup" target-popup="#unsubscribe">Unsubscribe</span>
			<h2><%= @feed.name %></h2>
		</div>
		<div id="reader">
		<% @articles.each do |article| %>
			<article class="unread">
				<div class="date"><%= article.date.strftime("%Y-%m-%d") %></div>
				<h2><a href="<%= article.url %>" target="_blank"><%= article.title %></a></h2>
				<div class="author">by <b><%= article.author %></b></div>
				<div class="content">
					<p>
					<%= article.content.html_safe %>
					</p>
				</div>
				<div class="action-bar">
					<a>Like</a>
					<a>Mark as read</a>
				</div>
			</article>
		<% end %>
		</div>
	</div>
</div>
<div id="overlay" onclick="hideOverlay()"></div>
<div id="unsubscribe" class="popup">
	<div class="header">
		<span class="button-secondary" onclick="hideOverlay()">Ã—</span>
		<h3>Unsubscribe</h3>
	</div>
	<form method="post">
		<fieldset>
			<span id="form-question">Are you sure you want to unsubscribe from <%= @feed.name %>?</span>
			<button type="submit" onclick="PageMethods.unsubscribe()">Yes</button>
			<button type="button" class="button-secondary" onclick="hideOverlay()" tabindex="1">No</button>
		</fieldset>
	</form>
</div>
